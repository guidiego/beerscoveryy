@using Microsoft.AspNetCore.Identity
@using beerscovery.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" class="head-data-on" method="post" id="logoutForm" class="navbar-right">
        <a href="/Score" title="Minhas Avaliações">@UserManager.GetUserName(User)!</a>
        <button type="submit" class="btn btn-link navbar-btn navbar-link">
            <i class="fa fa-sign-out"></i>
        </button>
    </form>
}
else
{
    <div class="head-data-off">
        <a asp-area="" class="btn btn-default" asp-controller="Account" asp-action="Login">Entrar</a>
    </div>
}
