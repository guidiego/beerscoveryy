<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Beerscovery - @ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:100,400,700|Ranga:400,700" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="container">
        <h1 onClick="window.location.href='/Beer'">
            <span>beer</span>scovery
        </h1>
        <div class="auth">
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </header>
    <div class="container" style="min-height: 570px">
        @RenderBody()
    </div>
    <footer class="footer">
        Feito com <i class="fa fa-heart"></i> e infelizmente com .NET por Guilherme Diego e Luis Guedes!
    </footer>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC6IQSDw-avZK7ILBl98Rq6hDgkTCySe9M&callback=initMap"
    async defer></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
